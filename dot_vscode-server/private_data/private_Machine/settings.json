{
  // GENERAL SETTINGS
  "chat.commandCenter.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.settings.editor": "json",
  "workbench.tree.expandMode": "doubleClick",
  // WINDOW SETTINGS
  "window.confirmBeforeClose": "always",
  "window.restoreWindows": "none",
  "window.zoomLevel": 0,
  // EXPLORER SETTINGS
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.expandSingleFolderWorkspaces": true,
  "explorer.incrementalNaming": "smart",
  "explorer.sortOrder": "type",
  // SEARCH SETTINGS
  "search.collapseResults": "alwaysCollapse",
  "search.exclude": {
    ".DS_Store": true,
    ".env": true,
    ".git": true,
    ".hg": true,
    ".svn": true,
    ".venv": true,
    ".vscode": true,
    ".vscode-server": true,
    "*.code-search": true,
    "bower_components": true,
    "build": true,
    "dist": true,
    "node_modules": true
  },
  "search.quickAccess.preserveInput": true,
  "search.searchEditor.defaultNumberOfContextLines": 1,
  "search.searchEditor.focusResultsOnSearch": true,
  "search.showLineNumbers": true,
  "search.useIgnoreFiles": true,
  "search.useReplacePreview": true,
  // TERMINAL SETTINGS
  "terminal.explorerKind": "integrated",
  "terminal.integrated.confirmOnExit": "always",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "args": [],
      "icon": "terminal-cmd",
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ]
    },
    "PowerShell": {
      "icon": "terminal-powershell",
      "source": "PowerShell"
    }
  },
  // REMOTE / TUNNEL SETTINGS
  "remote.autoForwardPortsSource": "hybrid",
  "remote.tunnels.access.preventSleep": true,
  // EXTENSIONS
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "extensions.verifySignature": true,
  // MYPY
  "mypy-type-checker.args": [
    "--disallow-untyped-calls",
    "--disallow-untyped-defs",
    "--disallow-untyped-decorators",
    "--disallow-incomplete-defs",
    "--warn-unused-ignores",
    "--warn-no-return",
    "--ignore-missing-imports",
    "--follow-imports=skip"
  ],
  "mypy-type-checker.cwd": "${workspaceFolder}",
  "mypy-type-checker.reportingScope": "file",
  // AUTODOCSTRING
  "autoDocstring.docstringFormat": "google",
  "autoDocstring.generateDocstringOnEnter": true,
  "autoDocstring.guessTypes": true,
  "autoDocstring.includeName": true,
  "autoDocstring.quoteStyle": "\"\"\"",
  "autoDocstring.startOnNewLine": true,
  // TODO TREE
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "FUTURE",
    "TEST",
    "HACK",
    "DEBUG",
    "REVIEW"
  ],
  "todo-tree.highlights.customHighlight": {
    "BUG": {
      "background": "#E6F7FF",
      "foreground": "#0000FF",
      "icon": "bug",
      "opacity": 70
    },
    "FIXME": {
      "background": "#FFF5F5",
      "foreground": "#FF4500",
      "icon": "tools",
      "opacity": 90
    },
    "FUTURE": {
      "background": "#F0F8FF",
      "foreground": "#1E90FF",
      "icon": "calendar",
      "opacity": 75
    },
    "HACK": {
      "background": "#F3E5F5",
      "foreground": "#800080",
      "icon": "bug",
      "opacity": 75
    },
    "REVIEW": {
      "background": "#FFFAF0",
      "foreground": "#8B4513",
      "icon": "eye",
      "opacity": 80
    },
    "TEST": {
      "background": "#E0F2F1",
      "foreground": "#228B22",
      "icon": "beaker",
      "opacity": 70
    },
    "TODO": {
      "background": "#000000",
      "foreground": "#FFD700",
      "icon": "checklist",
      "opacity": 80
    }
  },
  "todo-tree.highlights.defaultHighlight": {
    "borderRadius": "4px",
    "fontStyle": "italic",
    "gutterIcon": true,
    "textDecoration": "underline",
    "type": "tag"
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS):",
  // YAML
  "yaml.completion": true,
  "yaml.extension.recommendations": true,
  "yaml.format.bracketSpacing": true,
  "yaml.format.enable": true,
  // DOTENV
  "dotenv-intellisense.debug": true,
  "dotenv-intellisense.filePatterns": [
    ".env",
    "*.env",
    ".env.*"
  ],
  "dotenv-intellisense.maskValues": true,
  "dotenv-intellisense.sensitivePatterns": [
    "KEY",
    "PASSWORD",
    "TOKEN",
    "SECRET"
  ],
  "files.exclude": {
    ".git": true,
    ".svn": true,
    ".hg": true,
    ".DS_Store": true,
    // "*.env*": true,
    "credentials.json": true,
    "Thumbs.db": true
  },
  // LIVESHARE
  "liveshare.allowGuestDebugControl": true,
  "liveshare.autoShareTerminals": true,
  // GIT
  "diffEditor.hideUnchangedRegions.enabled": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  // CODEIUM
  "codeium.enableConfig": {
    "*": true,
    "json": true,
    "markdown": true,
    "nginx": true,
    "properties": true,
    "yaml": true,
    "ignore": true
  },
  "codeium.snoozeTime": 15,
  // LANGUAGE FORMATTERS
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingComments": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoIndent": "full",
  "editor.trimAutoWhitespace": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "editor.minimap.enabled": false,
  "workbench.startupEditor": "readme",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    }
  },
  "database-client.autoSync": true,
  "redhat.telemetry.enabled": false,
  "ruff.importStrategy": "useBundled",
  "ruff.lineLength": 120,
  "ruff.lint.enable": true,
  "ruff.showSyntaxErrors": false,
  "ruff.configurationPreference": "editorOnly",
  "ruff.lint.preview": true,
  "ruff.lint.select": [
    "ALL"
  ],
  "ruff.lint.ignore": [
    "CPY",
    "D100"
  ],
  "ruff.exclude": [
    "node_modules/",
    "venv/",
    ".venv/",
    ".env/",
    "dist/",
    "build/",
    "migrations/",
    "static/",
    "staticfiles/",
    "staticfiles_root/",
    "static_root/",
    "media/",
    "mediafiles/",
    "mediafiles_root/",
    "media_root/",
    "locale/",
    "localefiles/",
    "localefiles_root/",
    "locale_root/",
    "templates/",
    "templatesfiles/",
    "templatesfiles_root/",
    "templates_root/"
  ],
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.importFormat": "relative",
  "python.analysis.typeCheckingMode": "off"
}